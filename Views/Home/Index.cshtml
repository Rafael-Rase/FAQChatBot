<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ZeroUm Cursos</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container">
        <div class="logo-text-area">
            <h1>Zero Um Cursos</h1>
            <img src="~/images/logo_zero_um.png" alt="Logo ZeroUm Cursos - Desenvolva com Tecnologia">
            <p>Desenvolva sua carreira em Tecnologia!</p>
        </div>

        <div class="login-area">
            <div class="login-box">
                <h2>Acesse sua conta</h2>

                <!-- FORMULÁRIO DE LOGIN -->
                <form asp-action="Login" method="post">
                    <!--
                        asp-action="Login" → envia para a action Login do HomeController
                        method="post" → garante que os dados serão enviados via POST
                    -->

                    <div class="input-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" required
                               placeholder="seu@email.com">
                        <!-- name="email" → precisa bater com o parâmetro string email da action Login -->
                    </div>

                    <div class="input-group">
                        <label for="senha">Senha</label>
                        <input type="password" id="senha" name="senha" required
                               placeholder="********">
                        <!-- name="senha" → precisa bater com o parâmetro string senha da action Login -->
                    </div>

                    <a asp-controller="Home" asp-action="RecuperarSenha"
                       class="forgot-password-link">Esqueceu sua senha?</a>

                    <button type="submit" class="btn-login">
                        Conecte-se
                        <!-- botão submit envia o formulário via POST para Login -->
                    </button>

                    <p class="signup-text">
                        Ainda não tem conta? <a asp-controller="Home" asp-action="Cadastro"
                                                class="btn-signup">Cadastre-se</a>
                    </p>

                    <!-- Exibir mensagem de erro do ViewData se houver -->
                    @if (ViewData["Erro"] != null)
                    {
                        <p class="erro-login">@ViewData["Erro"]</p>
                    }
                </form>
            </div>
        </div>
    </div>
    <script src="~/js/script.js"></script>
</body>
</html>
